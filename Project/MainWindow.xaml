<Window x:Class="Project.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project"
        xmlns:viewModel="clr-namespace:Project.ViewModel"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <viewModel:MainViewModel/>
    </Window.DataContext>
    <Grid>
        <Frame NavigationUIVisibility="Hidden" Content="{Binding CurrentPage}"/>
        <Button Visibility="{Binding IsSearchButtonVisible}" Margin="0,1,2,0" Command="{Binding SearchDealsCommand}" VerticalAlignment="Top" HorizontalAlignment="Right" Height="20" Content="Search" Foreground="#b0b8c5" Background="#414855" BorderBrush="#b0b8c5"/>
        <Button VerticalAlignment="Bottom" Command="{Binding SwitchPageCommand}" Content="{Binding CommandText}" Foreground="#b0b8c5" Background="#414855" BorderBrush="#b0b8c5"/>
    </Grid>
</Window>
